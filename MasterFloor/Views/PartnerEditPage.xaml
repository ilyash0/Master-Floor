<Page x:Class="MasterFloor.Views.PartnerEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:MasterFloor.Views"
      mc:Ignorable="d"
      d:DesignHeight="500"
      d:DesignWidth="800"
      Title="EditPage">

    <Grid Margin="5"
          Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      Margin="10"
                      Grid.Row="1"
                      Grid.ColumnSpan="3"
                      Background="#F4E8D3">
            
            <Border BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="5">

                <StackPanel>
                    <TextBlock Text="Наименование:"
                               Margin="0,0,0,5" />
                    <TextBox x:Name="txtPartnerName"
                             Height="20"
                             Margin="0,0,0,10"
                             Text="{Binding Name}" />

                    <TextBlock Text="Тип партнёра:"
                               Margin="0,0,0,5" />
                    <ComboBox Name="comboBoxPartnerType"
                              SelectedValue="{Binding PartnerTypeId}"
                              SelectedValuePath="Id"
                              DisplayMemberPath="Name"
                              Margin="0,0,0,10"
                              Height="20" />

                    <TextBlock Text="Рейтинг (целое число):"
                               Margin="0,0,0,5" />
                    <TextBox x:Name="txtRating"
                             Height="20"
                             Margin="0,0,0,10"
                             Text="{Binding Rating}"
                             PreviewTextInput="NumberValidationTextBox" />

                    <TextBlock Text="Адрес:"
                               Margin="0,0,0,5" />
                    <TextBox x:Name="txtAddress"
                             Height="20"
                             Margin="0,0,0,10"
                             Text="{Binding Address}" />

                    <TextBlock Text="ФИО директора:"
                               Margin="0,0,0,5" />
                    <TextBox x:Name="txtDirector"
                             Height="20"
                             Margin="0,0,0,10"
                             Text="{Binding Director}" />

                    <TextBlock Text="Телефон:"
                               Margin="0,0,0,5" />
                    <TextBox x:Name="txtPhone"
                             Height="20"
                             Margin="0,0,0,10"
                             Text="{Binding Phone}" />

                    <TextBlock Text="Email:"
                               Margin="0,0,0,5" />
                    <TextBox x:Name="txtEmail"
                             Height="20"
                             Margin="0,0,0,10"
                             Text="{Binding Email}" />

                    <TextBlock Text="ИНН:"
                               Margin="0,0,0,5" />
                    <TextBox x:Name="txtInn"
                             Height="20"
                             Margin="0,0,0,10"
                             Text="{Binding Inn}" />
                </StackPanel>
            </Border>
        </ScrollViewer>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Grid.Row="2"
                    Grid.Column="2">
            <Button Content="Сохранить"
                    Click="Save_Click" />
            <Button Content="Отменить"
                    Click="Cancel_Click" />
        </StackPanel>
    </Grid>
</Page>
